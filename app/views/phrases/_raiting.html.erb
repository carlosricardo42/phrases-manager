<div class="table-responsive">
  <table class="table  table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th>Visits</th>
        <th>Votes</th>
        <th>Author</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% phrases.each do |phrase| %>
        <tr>
          <td><%= link_to phrase.title, phrase %></td>
          <td><%= phrase.visits %></td>
          <td><i class="fa fa-thumbs-up" id="votes"> <%= "#{phrase.votes}"%></i></td>
          <td> <%= phrase.person.full_name %></td>
          <td>
            <%= link_to phrase, class: 'btn btn-success' do %>
            <i class="fa fa-search"></i>
            <% end %>
              <%= render partial: 'shared/social', locals: {phrase: phrase} %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
